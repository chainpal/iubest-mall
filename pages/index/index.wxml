<!--index.wxml-->
<scroll-view class="container" scroll-y  bindscrolltolower="lower">
 <swiper 
    indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" 
    interval="{{interval}}" 
    duration="{{duration}}"
    >
      <block wx:key="{{imgUrls}}" class="per">
        <!-- <swiper-item>
          <image src='/images/my_y.png' style='width:100%;height:170px;' />
        </swiper-item> -->
        <swiper-item>
          <image src='/images/01.jpg' style='width:100%;height:170px;' />
        </swiper-item>
        <swiper-item>
          <image src='/images/B1.jpg' style='width:100%;height:170px;' />
        </swiper-item>
        <swiper-item>
          <image src='/images/03.jpg' style='width:100%;height:160px;' />
        </swiper-item>
      </block>
  </swiper>
  <view class='list'>
    <view class='item' wx:for="{{list}}">
      <navigator hover-class="none" url="/pages/details/index?id={{item._id}}">
        <image class='product' src='{{item.img}}'></image>
        <text class='text'>{{item.title}}.</text>
      </navigator>
      <view class='price'>
        <text>￥{{item.price}}</text>
        <view bindtap='addCart' data-item="{{item}}">
        <!-- <image style='width:20px;height:20px;' src='/images/Shopping.png'></image> -->
        <view style="background-image: url('/images/css.png'); " class='whole'>
        </view>
        </view>
      </view>
    </view>
  </view>
  <!-- <button bindtap='imgsc'> 上传</button> -->
</scroll-view>
